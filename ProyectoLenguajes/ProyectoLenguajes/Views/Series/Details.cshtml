</div>


    <h1>Episodes</h1>

<p>
    <a asp-controller="Episodes" asp-action="Create" asp-route-idSerie="@Model.idSerie">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
               numChapter
            </th>
            <th>
                name
            </th>
            <th>
                duration
            </th>
            <th>
                season
            </th>
            <th>
                idSerie
            </th>
            <th>
                img
            </th>
            <th>
                description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CHAPTERs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.numChapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.season)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idSerie)
                </td>
                <td>
                   @* @Html.DisplayFor(modelItem => item.img)*@
                    <div class="image"><img src="@item.img"></div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Episodes" asp-route-id="@item.idChapter">Edit</a>
                    <a asp-action="Details" asp-controller="Episodes" asp-route-id="@item.idChapter">Details</a>
                    <a asp-action="Delete" asp-controller="Episodes" asp-route-id="@item.idChapter">Delete</a>
                    @*<a asp-action="Delete" asp-route-id="@item.idChapter">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


