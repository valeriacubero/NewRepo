@model IEnumerable<ProyectoLenguajes.Models.ACTOR>

@{
    ViewData["Title"] = "Index";
}
<header>
    <div class="navbar">
        @{
            Html.RenderPartial("_Navbar");
        }
    </div>
</header>
<link rel="stylesheet" href="~/css/tables.css">
<h1>Index</h1>

<div>
    <button class="createBTN">
        <a asp-action="Create">Create New</a>
    </button>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td data-cell="Name">
                @Html.DisplayFor(modelItem => item.name)
            </td>
                <td data-cell="Last Name">
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
                <td data-cell="Birth">
                @Html.DisplayFor(modelItem => item.birth)
            </td>
                <td data-cell="Image">
                    <div class="image"><img src="@item.img"></div>
            </td>
                <td data-cell="Options">
                    <div class="button-container">
                    <div>
                        <button> <a asp-action="Edit" asp-route-id="@item.idActor">Edit</a> </button>
                    </div>
                    <br>
                    <div>
                        <button> <a asp-action="Details" asp-route-id="@item.idActor">Details</a> </button>
                    </div>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
