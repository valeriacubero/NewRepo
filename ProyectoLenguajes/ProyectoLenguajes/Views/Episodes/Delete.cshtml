@model ProyectoLenguajes.Models.CHAPTER

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/tables.css">
<header>
    <div class="navbar">
        @{
            Html.RenderPartial("_Navbar");
        }
    </div>
</header>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CHAPTER</h4>
    <hr />
    <table>
        <tr>
            <th>Num Chapter</th>
            <td>@Html.DisplayFor(model => model.numChapter)</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Html.DisplayFor(model => model.name)</td>
        </tr>
        <tr>
            <th>Duration</th>
            <td>@Html.DisplayFor(model => model.duration)</td>
        </tr>
        <tr>
            <th>Season</th>
            <td>@Html.DisplayFor(model => model.season)</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><div class="image"><img src="@Model.img"></div></td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Html.DisplayFor(model => model.description)</td>
        </tr>
        <tr>
            <th>ID Serie</th>
            <td>@Html.DisplayFor(model => model.idSerie)</td>
        </tr>
    </table>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idChapter" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button> <a asp-action="Index" asp-controller="Series">Cancel</a></button>
    </form>
</div>
