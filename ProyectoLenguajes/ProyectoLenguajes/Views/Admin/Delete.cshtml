@model ProyectoLenguajes.Models.ACCOUNT

@{
    ViewData["Title"] = "Delete";
}
@ViewBag.Error
<link rel="stylesheet" href="~/css/tables.css">
<header>
    <div class="navbar">
        @{
            Html.RenderPartial("_Navbar");
        }
    </div>
</header>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ACCOUNT</h4>
    <hr />
    <table>
        <tr>
            <th>Name</th>
            <td>@Html.DisplayFor(model => model.name)</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Html.DisplayFor(model => model.email)</td>
        </tr>
        <tr>
            <th>Roll</th>
            <td>@Html.DisplayFor(model => model.roll)</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>@Html.DisplayFor(model => model.userName)</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>@Html.DisplayFor(model => model.password)</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><div class="image"><img src="@Model.img"></div></td>
        </tr>
    </table>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idAccount" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button> <a asp-action="Index">Cancel</a></button>
    </form>
</div>
